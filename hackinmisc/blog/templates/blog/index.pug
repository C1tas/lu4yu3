extends blog/base.pug

block body
  .container
    .row
      .col.s12.m12.l12
        for post in posts
          .card.blue-grey.darken-1.medium
            .card-content.white-text
              a(href="{% url 'blog:post' slug=post.slug %}")
                span.card-title(style="display:inline;") {{ post.title }}
              ul.right
                for category in post.categories
                  li(style="display:inline;")
                    span.badge.new.orange.lighten-1
                      {{ category }}
              .code
                {{ post.content_html | safe }}
            .card-action
              a(href="#") Go
              a(href="#") test
              .row
                .col.s12
                  ul.tabs.blue-grey.darken-1
                    li.tab.col.s2.left-align Tags:
                    li.tab.col.s10
                      for tag in post.tags
                        .chip {{ tag }}

    ul.pagination
      li.disabled
        a(href="#!")
          i.material-icons chevron_left
      li.active
        a(herf="#!") 1
      li.waves-effect
        a(herf="#!") 2
      li.waves-effect
        a(herf="#!") 3
      li.waves-effect
        a(herf="#!") 4
      li.waves-effect
        a(herf="#!") 5
      li.waves-effect
        a(herf="#!")
          i.material-icons chevron_right
